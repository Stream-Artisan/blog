<div class="row">
    <div class="col-md-8">
        <h1 class="mb-4">Latest Blog Posts</h1>
        
        <% if (posts && posts.length > 0) { %>
            <% posts.forEach(post => { %>
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title"><%= post.title %></h2>
                        <p class="card-text"><%= post.content.substring(0, 200) %>...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/post/<%= post.slug %>" class="btn btn-primary">Read More</a>
                            <small class="text-muted">
                                Posted on <%= new Date(post.createdAt).toLocaleDateString() %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-info">
                No blog posts yet. Check back soon!
            </div>
        <% } %>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Welcome to My Blog</h5>
                <p class="card-text">This is a place where I share my thoughts, experiences, and knowledge.</p>
                <% if (!locals.user) { %>
                    <div class="d-grid gap-2">
                        <a href="/auth/login" class="btn btn-primary">Login</a>
                        <a href="/auth/register" class="btn btn-outline-primary">Register</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>